<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head')%>
<body>
<%- include('../partials/header')%>
<div class="userMancha">
    <img src="/images/manchas/pngwing.com (7).png" alt="">
</div>
    <main class="usersForm-container">
       
        <h3 class="userTitle">LOGIN</h3>
        <form action="/users/login" method="POST" class="form-ad" id="loginForm">
            <div class="form-ad-input">
                <input type="email" name="email" id="email" placeholder="Ingresá tu email">
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><%= errors.email.msg %> </small>
                <% } %>
                <small id="emailErrors" class="text-danger"></small>
            </div>
            <div class="form-ad-input">
                <input type="password" id="pass" name="pass" placeholder="Contraseña">
                <% if (locals.errors && errors.pass) { %>
                    <small class="text-danger"><%= errors.pass.msg %> </small>
                <% } %>
                <small class="text-danger" id="passErrors"></small>
            </div>
            <div class="form-ad-input_check">
                <input type="checkbox" name="remember" id="check">
                <label for="check">Recordar</label>
            </div>

            <% if (locals.errorMsg ) { %>
                    <small class="text-danger"><%= errorMsg %> </small>
            <% } %>
            <small class="text-danger" id="submitErrors"></small>

            <button type="submit" class="btn btn-ad-primary">
                INGRESAR
            </button>
            <a href="/users/register" class="userLink">Aún no tengo cuenta</a>
        </form>
    </main>
<%- include('../partials/footer')%>
    <script src="/js/validations/formLoginValidations.js"></script>
</body>
</html>